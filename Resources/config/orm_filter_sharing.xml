<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_security.orm.filter.subscriber.sharing.class">Sonatra\Component\Security\Doctrine\ORM\Filter\Listener\SharingFilterSubscriber</parameter>
    </parameters>

    <services>
        <!-- Doctrine ORM Sharing Filter Listener for Sharing SQL Filter -->
        <service id="sonatra_security.orm.filter.subscriber.sharing"
                 class="%sonatra_security.orm.filter.subscriber.sharing.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="sonatra_security.security_identity_manager"/>
            <argument type="service" id="sonatra_security.sharing_manager"/>
            <argument>%sonatra_security.sharing_class%</argument>
        </service>
    </services>
</container>
