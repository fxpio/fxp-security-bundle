<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Doctrine ORM Permission Provider -->
        <service id="fxp_security.permission_provider"
                 class="Fxp\Component\Security\Doctrine\ORM\Provider\PermissionProvider"
                 public="false">
            <argument type="expression">service('doctrine').getManagerForClass(parameter('fxp_security.permission_class')).getRepository(parameter('fxp_security.permission_class'))</argument>
            <argument type="service" id="doctrine"/>
        </service>
    </services>
</container>
